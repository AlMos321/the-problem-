{% extends 'AlmosBundle::layout.html.twig' %}

{% block title %}{{ quest.title }}{% endblock %}

{% block body %}
    <article class="blog">
        <header>
            <div class="date"><time datetime="{{ quest.created|date('c') }}">{{ quest.created|date('l, F j, Y') }}</time></div>
            <h2>{{ quest.title }}</h2>
        </header>
       {# <img src="{{ asset(['images/', blog.image]|join) }}" alt="{{ blog.title }} image not found" class="large" /> #}
        <div>
            <p>{{ quest.message }}</p>
        </div>
    </article>
{% endblock %}